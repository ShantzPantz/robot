void sendAudioFrame(uint8_t* buffer, size_t len) {
    if (webSocket.isConnected()) {        
        webSocket.sendBIN(buffer, len); 
        webSocket.loop(); // flush it
    }
}

void loop() {
    networkManager.loop();   // OTA / MQTT
    webSocket.loop();

    static uint8_t i2s_buffer[I2S_READ_LEN];
    size_t bytes_read = 0;

    i2s_read(I2S_NUM_0, i2s_buffer, sizeof(i2s_buffer), &bytes_read, portMAX_DELAY);

    if (bytes_read > 0) {
        // Only send the audio frame if data was successfully read
        Serial.println("Sending audio frame");
        sendAudioFrame(i2s_buffer, bytes_read);
        webSocket.loop();
    }

